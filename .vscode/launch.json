    "version": "0.2.0",
    "configurations": [       
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to gdbserver",
            "executable": "${workspaceRoot}/target/msp430-none-elf/debug/examples/${fileBasenameNoExtension}",
            "target": "localhost:2000",
            "remote": true,
            "cwd": "${workspaceRoot}", 
            "gdbpath": "${workspaceRoot}/msp430-gcc/bin/msp430-elf-gdb",
            "autorun": [
                    "target remote :2000",
                    "set print asm-demangle on",
                    "break panic",
                    "break main",
                    "load",
                    "monitor reset",
                ],
            "preLaunchTask": "Start mspdebug",
        },
        {
            "name": "C++ Remote Debug",
            "type": "cppdbg",
            "request": "launch",
            "debugServerPath": "mspdebug",
            "debugServerArgs": "tilib \"gdb\"",
            "miDebuggerPath": "${workspaceRoot}/msp430-gcc/bin/msp430-elf-gdb",
            "miDebuggerServerAddress": "localhost:2000",
            "program": "${workspaceRoot}/target/msp430-none-elf/debug/examples/${fileBasenameNoExtension}",
            //"preLaunchTask": "Start Debug Server",
            "cwd": ".", 
            "serverLaunchTimeout": 100000,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }        
    ]
}